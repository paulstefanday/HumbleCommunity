.form-group
  label.control-label Heading
  input.form-control(type="text" ng-model="job.heading" )

.form-group
  label.control-label Description
  textarea.form-control(ng-model="job.description")

.form-group
  label.control-label Salary Max
  input.form-control(type="text" ng-model="job.salary_max")

.form-group
  label.control-label Salary Min
  input.form-control(type="text" ng-model="job.salary_min")

.form-group
  label.control-label Start Date
  input.form-control(type="text" ng-model="job.start_date" data-max-date="{{job.end_date}}" bs-datepicker)

.form-group
  label.control-label End Date
  input.form-control(type="text" ng-model="job.end_date" data-min-date="{{job.start_date}}" bs-datepicker)

.form-group
  label.control-label Location
  input.form-control(type="text" ng-model="job.location" data-animation="am-flip-x" ng-options="address.formatted_address as address.formatted_address for address in getAddress($viewValue)" placeholder="Enter address" bs-typeahead)